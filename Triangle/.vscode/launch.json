{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenOCD Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Triangle.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "device": "STM32F407VG",
            "interface": "swd",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink-v2-1.cfg",
                "target/stm32f1x.cfg"
            ],
            "gdbPath": "/usr/bin/gdb-multiarch"
        }
    ]
}